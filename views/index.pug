extends layout

block content

  include header

  main
    mixin article(post)
      .article
        .article-wrapper
          h2= post.title
          h6= __('Author')+ ': ' + post.author
          h6= __('Date')+ ': ' + new Intl.DateTimeFormat(loc).format(post.date)
          h5= post.description
          p #{post.content}


    mixin list(id, posts)
      each item in posts
        +article(item)
      //ul(id=id)
      //  each item in posts
      //    li= item.title

    +list('posts-list', posts)

  include footer